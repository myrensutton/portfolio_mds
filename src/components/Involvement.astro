---
import Section from "./Section.astro";
import type { InvolvementProps } from "../types";

interface Props {
  involvement: InvolvementProps[];
}

const { involvement } = Astro.props;
---

<Section text="Involvement & Leadership" href="involvement">
  {
    involvement.map((inv) => (
      <div class="mb-10">
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
          {inv.role}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {inv.organization}
          </h4>
          <span class="pb-[2px] text-sm text-white/70">
            {inv.startDate} â€” {inv.endDate}
          </span>
        </div>
        <ul class="list-none">
          {inv.summary.map((item) => (
            <li class="relative mb-3 pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
              {item}
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</Section> 