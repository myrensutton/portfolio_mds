---
import Section from "./Section.astro";
import type { EducationProps } from "../types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
---

<div class="relative -mt-12">
  <!-- Subtle Academic Backdrop Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent"></div>
  </div>

  <div class="relative z-10">
    <Section text="Education" href="education">
      {
        education.map((edu) => (
          <div class="mb-10">
            <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
              {edu.degree}
            </h3>
            <div class="flex flex-col items-start pb-5">
              <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
                {edu.institution}
              </h4>
              {edu.track && (
                <p class="text-gray-300 mt-1">Track: {edu.track}</p>
              )}
              <span class="pb-[2px] text-sm text-white/70">
                {edu.startDate && edu.endDate ? `${edu.startDate} â€” ${edu.endDate}` : edu.endDate || ''}
              </span>
              {edu.gpa && (
                <p class="text-gray-300">GPA: {edu.gpa}</p>
              )}
            </div>
            {edu.honors && (
              <div class="mt-3">
                <p class="text-blue-400 font-medium">{edu.honors}</p>
              </div>
            )}
          </div>
        ))
      }
    </Section>
  </div>
</div> 