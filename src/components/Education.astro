---
import type { EducationProps } from "../types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
---

<section id="education" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Education</h2>
    <div class="max-w-4xl mx-auto space-y-8">
      {education.map((edu) => (
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{edu.degree}</h3>
              {edu.track && (
                <p class="text-gray-600 mt-1">Track: {edu.track}</p>
              )}
              <p class="text-gray-700 font-medium">{edu.institution}</p>
            </div>
            <div class="text-right mt-2 md:mt-0">
              <p class="text-gray-600">{edu.startDate} - {edu.endDate}</p>
              {edu.gpa && (
                <p class="text-gray-600">GPA: {edu.gpa}</p>
              )}
            </div>
          </div>
          {edu.honors && (
            <div class="mt-3">
              <p class="text-blue-600 font-medium">{edu.honors}</p>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section> 