---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, image, linkSource, timeline }, index) => {
      const top = 98 + index * 40;
      
      // Define which projects should show GitHub links (the ones that currently don't have them)
      const showGitHubLinks = [
        "Genome Variant Calling & Phylogeny Pipeline",
        "Structural Neuroinformatics of Chess Grandmasters",
        "Production Scale Variant Calling Workflow"
      ].includes(name);
      
      return (
        <div
          style={`top: ${top}px;`}
          class="sticky mb-12 rounded-2xl border border-neutral/20 bg-black max-w-6xl mx-auto"
        >
          <div class="bg-difu relative z-[1] grid w-full grid-rows-2 rounded-2xl bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-[''] sm:grid-cols-2 sm:grid-rows-1">
            <div class="px-8 pt-12 pb-6 flex flex-col sm:col-span-1">
              <h3 class="mb-5 font-serif text-3xl font-medium text-primary break-words">
                {name}
              </h3>
              {timeline && (
                <p class="mb-3 text-sm text-blue-400 font-medium">{timeline}</p>
              )}
              <p class="text-base text-neutral leading-relaxed break-words flex-1 max-h-80 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-transparent">
                {summary}
              </p>
              {showGitHubLinks && (
                <div class="flex gap-5 pt-6 text-white mt-auto">
                  <a
                    href={linkSource}
                    target="_blank"
                    class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                  >
                    GitHub
                  </a>
                </div>
              )}
            </div>
            <div class="flex items-center justify-center sm:col-span-1 p-4">
              <div 
                class="cursor-pointer hover:scale-105 transition-transform duration-200"
                data-image-src={image}
                data-image-alt={name}
              >
                <Image
                  class="max-h-full max-w-full rounded-ss-xl rounded-ee-2xl object-contain"
                  src={image}
                  alt={name}
                  width="736"
                  height="483"
                />
              </div>
            </div>
          </div>
        </div>
      );
    })
  }
</Section>

<style>
  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
  }
  
  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .scrollbar-thin::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 3px;
  }
  
  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-95 hidden z-50 flex items-center justify-center p-4">
  <div class="relative max-w-[95vw] max-h-[95vh]">
    <button 
      id="closeModal" 
      class="absolute -top-12 right-0 text-white text-4xl hover:text-gray-300 cursor-pointer z-10"
    >
      Ã—
    </button>
    <img id="modalImage" class="w-full h-auto max-h-[90vh] object-contain rounded-lg" src="" alt="" />
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage');
    const closeBtn = document.getElementById('closeModal');
    
    // Add click listeners to all project images
    document.addEventListener('click', function(e: Event) {
      const target = e.target as HTMLElement;
      if (!target) return;
      
      const imageContainer = target.closest('[data-image-src]') as HTMLElement;
      if (imageContainer) {
        const imageSrc = imageContainer.getAttribute('data-image-src');
        const imageAlt = imageContainer.getAttribute('data-image-alt');
        
        if (modal && modalImg && imageSrc) {
          (modalImg as HTMLImageElement).src = imageSrc;
          (modalImg as HTMLImageElement).alt = imageAlt || '';
          modal.classList.remove('hidden');
          modal.classList.add('flex');
        }
      }
    });
    
    // Close modal when clicking close button
    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
        }
      });
    }
    
    // Close modal when clicking outside the image
    if (modal) {
      modal.addEventListener('click', function(e: Event) {
        if (e.target === modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
        }
      });
    }
    
    // Close modal with Escape key
    document.addEventListener('keydown', function(e: KeyboardEvent) {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    });
  });
</script>
