---
import type { SkillsProps } from "../types";

interface Props {
  skills: SkillsProps;
}

const { skills } = Astro.props;
---

<section id="skills" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Technical Skills</h2>
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Programming Languages -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Programming Languages</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            {skills.languages.map((language) => (
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                {language}
              </span>
            ))}
          </div>
        </div>

        <!-- Software -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Software & Tools</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            {skills.software.map((software) => (
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                {software}
              </span>
            ))}
          </div>
        </div>

        <!-- Libraries -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Libraries & Frameworks</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            {skills.libraries.map((library) => (
              <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                {library}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 